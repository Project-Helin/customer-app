<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="customerapp.ProductListPage">
	<StackLayout>
		<ListView x:Name="ProductListView" RowHeight="60" VerticalOptions="FillAndExpand">
			<ListView.ItemTemplate>
				<DataTemplate >
					<ViewCell>
						<StackLayout
							Orientation="Horizontal"
							Padding="10">
							<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
								<Label Text="{Binding Name}"/>
								<Label FontSize="Small"	Text="{Binding Organisation.Name}" TextColor="Gray"/>
							</StackLayout>

							<Label
								Text="{Binding Price, StringFormat='{0:0.00}'}"
								HorizontalOptions="End" />
							<Label
								Text="CHF"
								HorizontalOptions="End" />
							<Label
								FontSize="Medium"
								TextColor="Blue"
								Text="{Binding Amount}" />
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackLayout 
			HorizontalOptions="Center"
			VerticalOptions="EndAndExpand">
			<Label 
				Text="Total: 0.00 CHF"
				x:Name="TotalAmount" 
				FontSize="Small" />
			<Button
		    	x:Name="SendOrderButton"
		    	IsEnabled="false"
				Text="Send order"
				Clicked="OnOrderButtonClick" />
		</StackLayout>

	
	</StackLayout>
</ContentPage>